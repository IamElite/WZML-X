{
  "name": "WZML-X",
  "description": "Telegram Mirror/Leech Bot for Google Drive, Rclone, and more.",
  "repository": "https://github.com/IamElite/WZML-X",
  "keywords": ["telegram", "mirror", "leech", "heroku", "gdrive"],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true,
      "value": ""
    },
    "DATABASE_URL": {
      "description": "MongoDB connection string",
      "required": true,
      "value": ""
    },
    "UPSTREAM_REPO": {
      "description": "GitHub repo URL to pull code from",
      "required": true,
      "value": "https://github.com/IamElite/WZML-X"
    },
    "UPSTREAM_BRANCH": {
      "description": "Branch name to deploy",
      "required": true,
      "value": "master"
    },
    "AUTHORIZED_CHATS": {
      "description": "Telegram chat IDs allowed to use the bot (comma separated if multiple)",
      "required": true,
      "value": "-4930745718"
    },
    "SUDO_USERS": {
      "description": "Telegram user IDs with sudo access (comma separated if multiple)",
      "required": true,
      "value": "1679112664"
    },
    "OWNER_ID": {
      "description": "Telegram user ID of the bot owner",
      "required": true,
      "value": "7074383232"
    },
    "TELEGRAM_API": {
      "description": "Telegram API ID from https://my.telegram.org",
      "required": true,
      "value": "28053244"
    },
    "TELEGRAM_HASH": {
      "description": "Telegram API Hash from https://my.telegram.org",
      "required": true,
      "value": "a7d745be7c8ba465750bfad1e7abc075"
    }
  },
  "formation": {
    "worker": {
      "quantity": "1",
      "size": "Standard-2X"
    }
  },
  "stack": "container"
}
